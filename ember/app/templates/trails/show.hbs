<h1>{{model.name}}</h1>
<dl>
  {{#if this.location}}
    <dt>Location:</dt>
    <dd>{{model.location}}</dd>
  {{/if}}
  <dt>Latitude:</dt>
  <dd>{{model.latitude}}</dd>
  <dt>Longitude:</dt>
  <dd>{{model.longitude}}</dd>
</dl>

<iframe
  width="100%"
  height="450"
  frameborder="0" style="border:0"
  src="https://www.google.com/maps/embed/v1/place?key=AIzaSyD7eL97U_zG1oN0zY7CO0CJTFxsGMxsN1M&q={{model.address}}">
</iframe>

<p>{{link-to "edit" 'trails.show.edit' this class="btn btn-warning"}}</p>
<p>{{link-to "Rate This Hike" 'trails.show.ratings.new' class="btn btn-info"}}</p>

<h3>Photo :(</h3>
<img src="http://media-cache-ec0.pinimg.com/736x/ee/50/f1/ee50f115b25363ab114cd0d5fa41810a.jpg" alt="Nature" />

