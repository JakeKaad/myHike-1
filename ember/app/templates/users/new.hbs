<div class='video'>
  <video autoplay muted poster="backgroundVideo.MOV" id='bgvid' loop>
    <source src="backgroundVideo.MOV" type="video/webm">
    <source src="backgroundVideo.MOV" type="video/mp4">
  </video>
</div>

<h2 class="centerz">Create an Account</h2>
<form>
  <p>
    <label>Email</label>
     {{input value=model.email id="email" class="form-control"}}
  </p>
  <p>
    <label>Password</label>
     {{input type='password' value=model.password id="password" class="form-control"}}
  </p>
  <p>
    <label>Password Confirmation</label>
     {{input type='password' value=model.password_confirmation id="password_confirmation" class="form-control"}}
  </p>
  <p>
    <input class="btn btn-success" type="submit" value="Sign Up!" {{action 'save'}}>
  </p>
</form>
